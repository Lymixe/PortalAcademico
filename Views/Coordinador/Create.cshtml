@model PortalAcademico.Models.Curso

@{
    ViewData["Title"] = "Crear Nuevo Curso";
}

<h1>@ViewData["Title"]</h1>
<hr />

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="Codigo" class="form-label"></label>
                <input asp-for="Codigo" class="form-control" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Creditos" class="form-label"></label>
                <input asp-for="Creditos" class="form-control" type="number" />
                <span asp-validation-for="Creditos" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CupoMaximo" class="form-label">Cupo MÃ¡ximo</label>
                <input asp-for="CupoMaximo" class="form-control" type="number" />
                <span asp-validation-for="CupoMaximo" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="HorarioInicio" class="form-label">Horario de Inicio</label>
                <input asp-for="HorarioInicio" class="form-control" type="time" />
                <span asp-validation-for="HorarioInicio" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="HorarioFin" class="form-label">Horario de Fin</label>
                <input asp-for="HorarioFin" class="form-control" type="time" />
                <span asp-validation-for="HorarioFin" class="text-danger"></span>
            </div>
            <div class="form-check mb-3 mt-4">
                <input class="form-check-input" type="checkbox" asp-for="Activo" />
                <label class="form-check-label" asp-for="Activo">
                    Curso Activo
                </label>
            </div>
        </div>
    </div>
    <div class="mt-4">
        <input type="submit" value="Crear" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
    </div>
</form>